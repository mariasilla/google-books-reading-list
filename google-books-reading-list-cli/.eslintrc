{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": "airbnb-base/legacy",
  "plugins": ["jest"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "quotes": ["error", "double"],
    "no-console": "off",
    "no-use-before-define": [
      "error",
      { "functions": false, "classes": false, "variables": false }
    ],
    "no-global-assign": "off",
    "no-return-await": "off",
    "global-require": "off",
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["book"] }]
  }
}
